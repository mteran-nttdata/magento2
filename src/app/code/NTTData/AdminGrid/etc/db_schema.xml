<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
        <table name="nttdata_admin_grid" resource="default" engine="innodb" comment="Admin Grid Table">
                <column xsi:type="smallint" name="id_company" padding="10" unsigned="false" nullable="false" identity="true" comment="value id employ"/>
                <column xsi:type="varchar" name="first_name" nullable="false" length="30" comment="first name employee"/>
                <column xsi:type="varchar" name="last_name" nullable="false" length="30" comment="last name employee"/>
                <column xsi:type="varchar" name="age" nullable="false" length="10" comment="age employee"/>
                <column xsi:type="varchar" name="type_employee" nullable="false" length="30"  comment="type employe"/>
                <column xsi:type="smallint" name="id_language" unsigned="false" nullable="true" comment="value id language "/>
                <column xsi:type="smallint" name="id_designer" unsigned="false" nullable="true" comment="value id designer"/>

                <column xsi:type="timestamp" name="creation_time" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
                <column xsi:type="timestamp" name="update_time" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Modification Time"/>
                
                <constraint xsi:type="primary" referenceId="PRIMARY">
                        <column name="id_company"/>
                </constraint>
                <constraint xsi:type="foreign" referenceId="NTTDATA_ADMIN_GRID_ID_COMPANY_NTTDATA_ADMINLANGUAGE_ID_LANGUAGE" table="nttdata_admin_grid" column="id_language" referenceTable="nttdata_adminlanguage" referenceColumn="id_language"/>
                <constraint xsi:type="foreign" referenceId="NTTDATA_ADMIN_GRID_ID_COMPANY_NTTDATA_ADMINDESIGNER_ID_DESIGNER" table="nttdata_admin_grid" column="id_designer" referenceTable="nttdata_admindesigner" referenceColumn="id_designer"/>
        </table>

        <table name="nttdata_adminlanguage">
                <column xsi:type="smallint" name="id_language" padding="10" unsigned="false" nullable="false" identity="true" comment="Value ID"/>
                <column xsi:type="varchar" name="name" nullable="false" length="80" comment="name language"/>
        
                <constraint xsi:type="primary" referenceId="PRIMARY">
                        <column name="id_language"/>
                </constraint>
        </table>

        <table name="nttdata_admindesigner">
                <column xsi:type="smallint" name="id_designer" padding="10"  unsigned="false" nullable="false" identity="true" comment="Value ID"/>
                <column xsi:type="varchar" name="name" nullable="false" length="80" comment="type of design"/>
                
                <constraint xsi:type="primary" referenceId="PRIMARY">
                        <column name="id_designer"/>
                </constraint>
        </table>
</schema>
